{
  "manifest_version": 3,
  "name": "UI Chatter POC",
  "version": "0.1.0",
  "description": "POC for browser-to-Claude Code communication via ACP",
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3456/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "UI Chatter POC"
  }
}
